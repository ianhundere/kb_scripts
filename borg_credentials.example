#!/bin/bash
# Borg Backup Credentials
# Install to: ~/.borg_credentials
# Permissions: chmod 600 ~/.borg_credentials
#
# This file is sourced by backup wrapper scripts to keep credentials
# out of crontab and backup scripts

export BORG_PASSPHRASE='your-passphrase'

# Repository for home backups
export BORG_REPO='user@host.repo.borgbase.com:repo'

# Repository for system backups
export BORG_REPO_SYS='user@host.repo.borgbase.com:repo'

# Repository for full drive backups
export BORG_REPO_FULL='user@host.repo.borgbase.com:repo'

# External backup drive mount point
export BACKUP_DRIVE='/media/ianfundere/backup_t7'
